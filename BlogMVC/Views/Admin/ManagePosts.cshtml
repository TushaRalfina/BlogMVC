@model IEnumerable<BlogMVC.Models.post>

@{
    ViewBag.Title = "Manage Posts";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <link href="~/Content/css/vendor.css" rel="stylesheet" />

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .s-content {
            padding: 30px;
        }

        .entry__title {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #343a40;
        }

        .table-responsive {
            margin-top: 20px;
        }

        .table {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .table th,
            .table td {
                vertical-align: middle;
            }

        .btn-container {
            display: flex;
            gap: 10px;
            margin-top: 5px;
        }

        .btn {
            font-size: 0.9rem;
            padding: 8px 16px;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .entry__header--narrow {
            border-bottom: 2px solid #343a40;
            padding-bottom: 15px;
            margin-bottom: 25px;
        }

        .img-thumbnail {
            max-width: 100px;
            height: auto;
        }
    </style>

</head>
<body>
    <div id="body" class="s-content s-content--page">
        <div class="container">
            <div class="row entry-wrap">
                <div class="col-lg-12">
                    <article class="entry">
                        <header class="entry__header entry__header--narrow text-center">
                            <h1 class="entry__title">
                                Manage Blog Posts
                            </h1>
                        </header>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Title of the post</th>
                                        <th>Author</th>
                                        <th>Created :</th>
                                        <th>Main Image</th>
                                        <th>Approve/Reject</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var post in Model)
                                    {
                                        <tr>
                                            <td><a href="@Url.Action("Post", "BlogPost", new { id = post.id })">@post.title</a></td>
                                            <td>@post.user.username</td>
                                            <td>@post.created_at</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(post.main_image))
                                                {
                                                    <img src="@post.main_image" alt="Main Image" class="img-thumbnail" />
                                                }
                                                else
                                                {
                                                    <span>No Image</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-container">
                                                    @using (Html.BeginForm("ApprovePost", "Admin", FormMethod.Post))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        @Html.Hidden("id", post.id)
                                                        <button type="submit" class="btn btn-success">Approve</button>
                                                    }
                                                    @using (Html.BeginForm("DeletePost", "Admin", FormMethod.Post))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        @Html.Hidden("id", post.id)
                                                        <button type="submit" class="btn btn-danger">Reject</button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </article>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
